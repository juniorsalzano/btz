{
  "plugins": ["spellcheck", "html"],
  "rules": {
    "indent": ["error", 2],
    "spellcheck/spell-checker": [
      "warn",
      {
        "comments": true,
        "strings": true,
        "identifiers": true,
        "lang": "pt_BR",
        "skipWords": [],
        "skipIfMatch": [
          "http://[^s]*",
          "^[-\\w]+/[-\\w\\.]+$"
        ],
        "skipWordIfMatch": [
          "^foobar.*$"
        ],
        "minLength": 3
      }
    ],
    "html/indent": ["error", 2],
    "html/report-bad-indent": "error",
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "extends": [
    "eslint:recommended",
    "plugin:html/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}